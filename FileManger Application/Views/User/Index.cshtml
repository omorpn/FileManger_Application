@using FileManger_Application.DTOs.UserDto
@model UserResponse

@{
    ViewData["Title"] = "My Account";
    Layout = "_AdminLayout"; // or your normal layout
}

<div class="container-fluid">

    <!-- PAGE HEADER -->
    <div class="row mb-4">
        <div class="col">
            <h4 class="fw-semibold">
                <i class="bi bi-person-circle me-1"></i>
                My Account
            </h4>
            <p class="text-muted mb-0">
                Manage your personal information and security settings
            </p>
        </div>
    </div>

    <!-- PROFILE SECTION -->
    <div class="card mb-4">
        <div class="card-header bg-white fw-semibold">
            <i class="bi bi-person me-1"></i>
            Profile Information
        </div>

        <div class="card-body">
            <form method="post" asp-action="UpdateProfile">

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">First Name</label>
                        <input class="form-control"
                               value="@Model.FirstName" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Last Name</label>
                        <input class="form-control"
                               value="@Model.LastName" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Email Address</label>
                        <input class="form-control"
                               value="@Model.Email"
                               disabled />
                        <small class="text-muted">
                            Email cannot be changed
                        </small>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Account Status</label>
                        <input class="form-control"
                               value="Active"
                               disabled />
                    </div>
                </div>

                <div class="mt-4">
                    <button class="btn btn-primary">
                        <i class="bi bi-save me-1"></i>
                        Save Changes
                    </button>
                </div>

            </form>
        </div>
    </div>

    <!-- SECURITY SECTION -->
    <div class="card mb-4">
        <div class="card-header bg-white fw-semibold">
            <i class="bi bi-shield-lock me-1"></i>
            Security
        </div>

        <div class="card-body">

            <div class="row align-items-center mb-3">
                <div class="col">
                    <strong>Password</strong>
                    <p class="text-muted mb-0">
                        Last updated 3 months ago
                    </p>
                </div>
                <div class="col-auto">
                    <a asp-action="ChangePassword"
                       class="btn btn-outline-secondary">
                        Change Password
                    </a>
                </div>
            </div>

            <hr />

            <div class="row align-items-center">
                <div class="col">
                    <strong>Two-Factor Authentication</strong>
                    <p class="text-muted mb-0">
                        Add an extra layer of security to your account
                    </p>
                </div>
                <div class="col-auto">
                    <span class="badge bg-secondary">
                        Not Enabled
                    </span>
                </div>
            </div>

        </div>
    </div>

    <!-- ACCOUNT ACTIONS -->
    <div class="card border-danger">
        <div class="card-header bg-white fw-semibold text-danger">
            <i class="bi bi-exclamation-triangle me-1"></i>
            Account Actions
        </div>

        <div class="card-body">

            <div class="row align-items-center">
                <div class="col">
                    <strong>Deactivate Account</strong>
                    <p class="text-muted mb-0">
                        This will disable access to your account
                    </p>
                </div>
                <div class="col-auto">
                    <button class="btn btn-outline-danger">
                        Deactivate
                    </button>
                </div>
            </div>
