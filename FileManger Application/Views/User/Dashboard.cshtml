@using FileManger_Application.Views.ViewsDTOs
@model UserDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";

}

@functions{
    string FormatFileSize(decimal? size)
    {
        if(size == null || size.Value < 0)
        {
            return $"{0}B";
        }
        string[] units = { "B", "KB", "MB", "GB", "TB" };
        int index = 0;

        decimal value = size.Value;

        while(value >= 1024 && index <units.Length - 1)
        {
            value /= 1024;
            index++;
        }
        return $"{value:F2}{units[index]}";
    }}

<div class="container-fluid py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-semibold mb-0">Welcome, @Model.UserName</h4>
        <div>
            <button class="btn btn-outline-secondary" onclick="window.location.reload()">
                <i class="bi bi-arrow-repeat me-1"></i> Refresh
            </button>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center p-3">
                <h6>Total Files</h6>
                <h3>@Model.TotalFiles</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center p-3">
                <h6>Total Storage Used</h6>
                <h3>@FormatFileSize(Model.StorageUsed)</h3>
            </div>
        </div>
      
    </div>

    <!-- Recent Files Table -->
    <div class="card">
        <div class="card-header">
            <h6 class="mb-0">Recent Files</h6>
        </div>
        <div class="card-body table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>File Name</th>
                        <th>Type</th>
                        <th>Size</th>
                        <th>Uploaded</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.RecentFiles != null && Model.RecentFiles.Any())
                    {
                        foreach (var file in Model.RecentFiles)
                        {
                            <tr>
                                <td>@file.FileName</td>
                                <td>@file.Type</td>
                                <td>@FormatFileSize(file.Size)</td>
                                <td>@file.UpdatedAt.ToString("dd MMM yyyy")</td>
                                <td>
                                    @if (file.IsDeleted)
                                    {
                                        <span class="badge bg-danger">Deleted</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Download" asp-route-id="@file.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-download"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@file.Id" class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-5">No files found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
