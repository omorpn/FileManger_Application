@using FileManger_Application.DTOs.Admin
@model AdminDashboardDto
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<div class="row g-4">

    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="text-muted">Total Users</h6>
                        <h4 class="fw-semibold">@Model.TotalUsers</h4>
                    </div>
                    <i class="bi bi-people fs-3 text-primary"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="text-muted">Files Stored</h6>
                        <h4 class="fw-semibold">@Model.TotalFiles</h4>
                    </div>
                    <i class="bi bi-folder fs-3 text-success"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="text-muted">Active Sessions</h6>
                        <h4 class="fw-semibold">@Model.ActiveSessions</h4>
                    </div>
                    <i class="bi bi-activity fs-3 text-warning"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="text-muted">Storage Used</h6>
                        <h4 class="fw-semibold">@Model.StorageUsedPercentage</h4>
                    </div>
                    <i class="bi bi-hdd fs-3 text-danger"></i>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- TABLE -->
<div class="card mt-4">
    <div class="card-body">
        <h6 class="fw-semibold mb-3">
            Recent Users
        </h6>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Role</th>
                    <th>Created</th>
                </tr>
            </thead>
            <tbody>
                @if(Model.RecentUsers == null)
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted">
                            No recent users found.
                        </td>
                    </tr>
                }
                else
                        {
                    @foreach (var user in Model.RecentUsers){
                <tr>
                    <td>@user.Email</td>
                            <td><span class="badge bg-success">@user.Role</span></td>
                    <td>@user.Role</td>
                    <td>@user.CreatedAt.ToShortTimeString()</td>
                </tr>
                        }}
            </tbody>
        </table>
    </div>
</div>
