@{
    ViewData["Title"] = "OutSave - Cloud File Saving Platform";
}

<style>
    :root {
        --primary: #0076FF;
        --accent: #6A0DFF;
        --dark: #0A0A14;
        --bg-light: #F4F6FB;
    }

    body {
        background: var(--bg-light);
    }

    .navbar-outs {
        background: var(--dark);
    }
    .navbar-outs a {
        color: #fff !important;
    }

    .hero-outs {
        background: linear-gradient(135deg, var(--primary), var(--accent));
        color: #fff;
        padding: 120px 0;
    }

    .feature-card {
        background: #fff;
        border: none;
        border-radius: 12px;
        padding: 30px;
        transition: 0.3s;
    }
    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,.05);
    }

    footer {
        background: var(--dark);
        color: #ccc;
        padding: 25px 0;
    }
</style>


<!-- HERO -->
<header class="hero-outs text-center">
    <div class="container">
        <h1 class="display-4 fw-bold">Save, Sync & Protect Your Files With Confidence</h1>
        <p class="lead mt-3 mb-4">
            OutSave is your secure cloud storage platform — built for individuals and teams that value privacy,
            speed, and effortless organization.
        </p>

        <a href="/Account/Register" class="btn btn-light btn-lg px-5 me-3">
            Get Started Free
        </a>

        <a href="#features" class="btn btn-outline-light btn-lg px-5">
            How It Works
        </a>
    </div>
</header>


<!-- FEATURES -->
<section id="features" class="py-5">
    <div class="container text-center">

        <h2 class="fw-bold mb-4">Powerful Features, Simple Experience</h2>
        <p class="text-muted mb-5">Everything you need to store, manage, and access your files securely.</p>

        <div class="row g-4">

            <div class="col-md-4">
                <div class="feature-card shadow-sm h-100">
                    <h1>🔐</h1>
                    <h5 class="fw-bold mt-3">End-to-End Encryption</h5>
                    <p class="text-muted">Your files are protected with bank-grade encryption at every layer.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature-card shadow-sm h-100">
                    <h1>⚡</h1>
                    <h5 class="fw-bold mt-3">Lightning Fast Sync</h5>
                    <p class="text-muted">Access your files instantly across all devices with real-time syncing.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature-card shadow-sm h-100">
                    <h1>📂</h1>
                    <h5 class="fw-bold mt-3">Smart Organization</h5>
                    <p class="text-muted">Automatic tagging, smart folders, and search powered by AI.</p>
                </div>
            </div>

        </div>
    </div>
</section>


<!-- SECURITY -->
<section id="security" class="py-5 bg-white">
    <div class="container">

        <div class="row align-items-center">
            <div class="col-lg-6">
                <img src="https://cdn.pixabay.com/photo/2017/02/23/13/05/cloud-2093412_960_720.jpg"
                     class="img-fluid rounded shadow" />
            </div>

            <div class="col-lg-6 ps-lg-5 mt-4 mt-lg-0">
                <h2 class="fw-bold">Your Privacy & Security Come First</h2>
                <p class="text-muted mt-3">
                    OutSave uses advanced zero-knowledge encryption technology, meaning we can’t
                    see your files — only you can.
                </p>
                <ul class="list-unstyled text-muted">
                    <li>✔ Zero-knowledge architecture</li>
                    <li>✔ Biometric login support</li>
                    <li>✔ Multi-factor authentication</li>
                    <li>✔ AES-256 & TLS 1.3 protection</li>
                </ul>
            </div>
        </div>

    </div>
</section>


<!-- PRICING -->
<section id="pricing" class="py-5">
    <div class="container text-center">

        <h2 class="fw-bold mb-4">Simple, Fair Pricing</h2>
        <p class="text-muted mb-5">Choose a plan that fits your needs.</p>

        <div class="row g-4">

            <!-- Free -->
            <div class="col-md-4">
                <div class="card shadow-sm border">
                    <div class="card-body">
                        <h4 class="fw-bold">Free Plan</h4>
                        <h1 class="fw-bold">$0</h1>
                        <p class="text-muted">For personal use</p>
                        <ul class="list-unstyled text-muted">
                            <li>5GB storage</li>
                            <li>Email support</li>
                            <li>Basic security</li>
                        </ul>
                        <a href="/Account/Register" class="btn btn-primary w-100">Start Free</a>
                    </div>
                </div>
            </div>

            <!-- Pro -->
            <div class="col-md-4">
                <div class="card shadow-sm border-2 border-primary">
                    <div class="card-body">
                        <h4 class="fw-bold">Pro</h4>
                        <h1 class="fw-bold">$9<span class="fs-6">/mo</span></h1>
                        <p class="text-muted">For professionals</p>
                        <ul class="list-unstyled text-muted">
                            <li>200GB storage</li>
                            <li>Fast sync</li>
                            <li>Premium security</li>
                        </ul>
                        <a href="/Account/Register" class="btn btn-primary w-100">Upgrade</a>
                    </div>
                </div>
            </div>

            <!-- Business -->
            <div class="col-md-4">
                <div class="card shadow-sm border">
                    <div class="card-body">
                        <h4 class="fw-bold">Business</h4>
                        <h1 class="fw-bold">$29<span class="fs-6">/mo</span></h1>
                        <p class="text-muted">For teams & companies</p>
                        <ul class="list-unstyled text-muted">
                            <li>1TB storage</li>
                            <li>Team management</li>
                            <li>Priority support</li>
                        </ul>
                        <a href="/Account/Register" class="btn btn-primary w-100">Contact Sales</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>


